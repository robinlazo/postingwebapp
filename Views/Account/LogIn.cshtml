@model LogInDTO
@{
    ViewData["Title"] = "Log In";
}

@section scripts {
    <script src="~/js/global.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
}
<div class="form-container">
    <div class="login-img">
    </div>
    <div class="input-list-form">
        <h2 class="form-header">Log In</h2>

        <form method="post" asp-action="LogIn" asp-route-ReturnUrl="@Model.ReturnURL">

            <label for="email" class="input-label">EMAIL</label>
            <span asp-validation-for="Email"></span>
            <div class="input-field">
                <i class="fas fa-envelope"></i>
                <input id="email" class="custom-input" asp-for="Email" placeholder="Type your Email"/>
            </div>

            <label for="password" class="input-label">PASSWORD</label> 
            <span asp-validation-for="Password"></span>
            <div class="input-field">
                <i class="fas fa-lock"></i>
                <input id="password" class="custom-input" asp-for="Password" placeholder="Type your Password"/>
                <i class="fas fa-eye normalpass-field" data-ispassvisible="false"></i>
            </div>

            <label for="password" class="input-label">Remember me?</label>
            <input type="checkbox" asp-for="RememberMe">
           
            <button type="submit" class="form-button">Log In </button>       

            <p class="notRegisteredMsg">Not Registered Yet? <a class="login-toregister-link" asp-action="Register" asp-controller="Account">Create An Account</a></p>
        </form>
    </div>
</div>